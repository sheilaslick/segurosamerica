<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#a1a1a1" />
            <stroke
                android:width="1dp"
                android:color="#4c4c4c" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#a1a1a1"
                android:endColor="#4c4c4c"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#4c4c4c" />
        </shape>
    </item>
</selector>