<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="#60CCCCCC" android:centerX="0.5" android:centerY="0.5" android:endColor="#60CCCCCC" android:startColor="#90FFFFFF" />

            <stroke android:width="2dp" android:color="#50ababab" />

            <corners android:radius="10dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:centerColor="#60CCCCCC" android:centerX="0.5" android:centerY="0.5" android:endColor="#90FFFFFF" android:startColor="#60CCCCCC" />

            <stroke android:width="2dp" android:color="#50333333" />

            <corners android:radius="10dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:centerColor="#60CCCCCC" android:centerX="0.5" android:centerY="0.5" android:endColor="#90FFFFFF" android:startColor="#60CCCCCC" />

            <stroke android:width="2dp" android:color="#50ababab" />

            <corners android:radius="10dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>