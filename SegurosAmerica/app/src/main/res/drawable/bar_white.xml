<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#C7C7C7" />
            <stroke
                android:width="1dp"
                android:color="#8A8A8A" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#8A8A8A" />
        </shape>
    </item>
</selector>