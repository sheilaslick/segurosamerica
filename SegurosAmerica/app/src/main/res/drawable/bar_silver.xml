<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#C2C2C2" />
            <stroke
                android:width="1dp"
                android:color="#8A8A8A" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#C2C2C2"
                android:endColor="#C7C7C7"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#8A8A8A" />
        </shape>
    </item>
</selector>