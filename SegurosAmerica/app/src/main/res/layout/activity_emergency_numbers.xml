        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barEmergencyNumbers"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonEmergencyNumbersPolice"
            style="@style/ButtonBack"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rectangle_call"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/button_police" />

        <Button
            android:id="@+id/buttonEmergencyNumbersFireFighter"
